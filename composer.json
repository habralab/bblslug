{
  "name": "tools/bblslug",
  "description": "CLI translation tool for HTML and plain text using LLM-based APIs.",
  "license": "proprietary",
  "type": "library",
  "require": {
    "php": ">=8.0",
    "ext-curl": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Bblslug\\": "src/Bblslug/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bblslug\\Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/bblslug"
  ],
  "scripts": {
    "lint": "vendor/bin/phpcs --standard=phpcs.xml",
    "phpunit": "vendor/bin/phpunit --testdox --colors=always --log-junit .phpunit.junit.xml"
  },
  "authors": [
    {
      "name": "Vadim Rybalko",
      "role": "Lead"
    }
  ]
}
