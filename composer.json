{
  "name": "habr/bblslug",
  "description": "CLI translation tool for HTML and plain text using LLM-based APIs.",
  "keywords": ["translation","LLM","deepl","openai"],
  "homepage": "https://github.com/habralab/bblslug",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Vadim Rybalko",
      "email": "vadim@habr.team",
      "role": "Lead"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-curl": "*",
    "ext-mbstring": "*",
    "symfony/yaml": "^7.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Bblslug\\": "src/Bblslug/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bblslug\\Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/bblslug"
  ],
  "scripts": {
    "lint": "vendor/bin/phpcs --standard=phpcs.xml",
    "test": "vendor/bin/phpunit --testdox --colors=always --log-junit .phpunit.junit.xml",
    "test:phpunit": "vendor/bin/phpunit --testsuite unit --testdox --colors=always --log-junit .phpunit.junit.xml",
    "test:phpstan": "vendor/bin/phpstan analyse src --level=max --memory-limit=-1"
  }
}
